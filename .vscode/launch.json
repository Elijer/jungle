{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch Server ðŸš€",
          "type": "node",
          "request": "launch",
          "runtimeExecutable": "npm",
          "runtimeArgs": ["run", "serve-debug"],
          "cwd": "${workspaceFolder}/server",
          "skipFiles": ["<node_internals>/**"],
          "outFiles": ["${workspaceFolder}/server/dist/**/*.js"],
          "env": {
              "NODE_ENV": "development"
          }
      },
      {
        "name": "test stuff",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "unit_tests"],
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"],
        "env": {
            "NODE_ENV": "development"
        }
    },
      // This one works great but requires `npm run dev` to have been run already
      {
        "name": "Attach Chrome Debugger ðŸš€",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}/client",
        "sourceMaps": true
      },
      {
        "name": "Debug Frontend ðŸš€",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}/client",
        "sourceMaps": true,
        "preLaunchTask": "Run Frontend Dev Server"
      },
      
  ],
  "compounds": [
      {
          "name": "Full Stack ðŸš€",
          "configurations": ["Launch Server ðŸš€", "Debug Frontend ðŸš€"]
