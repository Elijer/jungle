{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Frontend Dev Server",
      "type": "npm",
      "script": "dev",
      "path": "client",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "ready",
          "endsPattern": "to show help"
        }
      }
    }
  ]
}
